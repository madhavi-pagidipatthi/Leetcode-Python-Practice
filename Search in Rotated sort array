from typing import List

class Solution:
    def search(self, arr: List[int], key: int) -> int:
        n = len(arr)
        if n == 0:
            return -1

        low, high = 0, n - 1
        while low <= high:
            mid = (low + high) // 2
            if arr[mid] == key:
                return mid

            # left half sorted
            if arr[low] <= arr[mid]:
                if arr[low] <= key < arr[mid]:
                    high = mid - 1
                else:
                    low = mid + 1
            else:  # right half sorted
                if arr[mid] < key <= arr[high]:
                    low = mid + 1
                else:
                    high = mid - 1
        return -1
