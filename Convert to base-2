class Solution:
    def baseNeg2(self, n: int) -> str:
        if n > 0:
            res = []
            while n:
                n, r = divmod(n, -2)
                if r == -1:
                    n += 1
                    r = 1
                res.append(str(r))
            return "".join(res[::-1])
        return "0"
